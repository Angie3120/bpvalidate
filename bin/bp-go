#!/bin/sh

/etc/init.d/apache2 start
cp -pra /var/www/html_template/* /var/www/html
if [ ! -e /var/www/html/producers ]
then
	mkdir /var/www/html/producers
fi

bp-schema

while [ 1 ]
do
	echo "running..."
	bp-validate --versions=/etc/bpvalidate/versions.csv --output=/var/www/html/bps.json --limit=1000
	bp-report-errors --input=/var/www/html/bps.json --out=/var/www/html/
	bp-report-producers --input=/var/www/html/bps.json --out=/var/www/html/
	bp-report-endpoints --input=/var/www/html/bps.json --out=/var/www/html/
	bp-report-resources --input=/var/www/html/bps.json --out=/var/www/html/
	bp-report-versions --input=/var/www/html/bps.json --out=/var/www/html/
	bp-report-config --input=/var/www/html/bps.json --out=/var/www/html/
	bp-website-builder --input=/var/www/html/bps.json --out=/var/www/html/
	echo "done"

	sleep 300
done
