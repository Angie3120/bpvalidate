#!/usr/bin/perl -w

use utf8;
use strict;
use EOSN::Report;
use HTML::Entities;

binmode(STDOUT, ":utf8");

# --------------------------------------------------------------------------
# Main

my $data = get_report_options ();

foreach my $lang (languages()) {
	foreach my $content_type (content_types()) {
		my @report;
		foreach my $entry (@{$$data{producers}}) {
			my @section;

			my $producer = $$entry{regproducer}{owner};
			foreach my $message (@{$$entry{messages}}) {
				next if ($$message{kind} eq 'ok');
				push (@section, {
					sprintf => "%4s, %11s, %s",
					data => [$$message{kind}, $$message{class}, generate_message($message, lang => $lang, content_type => $content_type)],
					icons => 1,
					class => 2,
					noescape => 3
				});
			}

			if (@section) {
				push (@report, {name => $producer, rows => \@section});
			}
		}

		generate_report (lang => $lang, content_type => $content_type, data => $data, report => \@report, columns => 1, outfile => "reports/errors", text => 1, html => 1);
	}
}
