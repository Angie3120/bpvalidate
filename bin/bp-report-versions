#!/usr/bin/perl -w

use utf8;
use strict;
use EOSN::Report;

binmode(STDOUT, ":utf8");

# ---------------------------------------------------------------------------
# Main

my $data = get_report_options ();
my @report;
my %endpoints;

foreach my $entry (@{$$data{producers}}) {
	my $producer = $$entry{regproducer}{owner};
	foreach my $kind (sort keys %{$$entry{output}{nodes}}) {
		foreach my $node (@{$$entry{output}{nodes}{$kind}}) {
			$$node{producer} = $producer;
			push (@{$endpoints{$kind}}, $node);
		}
	}
}

foreach my $kind (sort keys %endpoints) {
	next if (($kind ne 'api_http') && ($kind ne 'api_https') && ($kind ne 'api_https2'));
	my @section;

	foreach my $entry (@{$endpoints{$kind}}) {
		my $producer = $$entry{producer};
		my $address = $$entry{address};
		push (@section, ["%s, %10s, %9s, %15s, %s\n", $$entry{producer}, hex('0x'. $$entry{response}{server_version}), $$entry{response}{server_version}, ($$entry{info}{server_version} || 'unknown'), $$entry{address}]);
	}

	push (@report, {name => $kind, rows => \@section});
}

generate_report (data => $data, report => \@report, title => 'API Versions Report', columns => 1, outfile => "reports/versions", text => 1, html => 1);
